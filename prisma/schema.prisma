generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  id      Int    @id @default(autoincrement())
  name    String @db.VarChar(50)
  address String @db.Text
  city    String @db.VarChar(25)
  gst     String @db.VarChar(16)
  phone   String @db.VarChar(20)
}

